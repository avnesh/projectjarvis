# Production Environment Variables Template
# Copy these to your Vercel environment variables dashboard

# Database
MONGODB_URI=your_production_mongodb_uri_here

# JWT Secret - MUST be different from development!
JWT_SECRET=your_production_jwt_secret_here

# AI API Keys (same as development)
OPENAI_API_KEY=your_openai_api_key
GEMINI_API_KEY=your_gemini_api_key
PERPLEXITY_API_KEY=your_perplexity_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key
GROQ_API_KEY=your_groq_api_key
TAVILY_API_KEY=your_tavily_api_key

# Server Configuration
PORT=5000
NODE_ENV=production

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_gmail_address
EMAIL_FROM=your_gmail_address
EMAIL_PASS=your_gmail_app_password

# Client Configuration
CLIENT_URL=https://your-app-name.vercel.app
CORS_ORIGIN=https://your-app-name.vercel.app
FRONTEND_URL=https://your-app-name.vercel.app

# Client Environment Variables (for Vercel)
VITE_API_URL=https://your-app-name.vercel.app/api